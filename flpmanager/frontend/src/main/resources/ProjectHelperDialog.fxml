<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>


<DialogPane xmlns:fx="http://javafx.com/fxml/1">
	<content>
		<VBox spacing="5">
			<HBox>
				<Label text="Song: " style="-fx-font-weight: bold" />
				<Label fx:id="songName" />
			</HBox>
			
			<HBox>
				<Label text="Project: " style="-fx-font-weight: bold" />
				<Label fx:id="projectName" />
			</HBox>
			
			<HBox>
				<Button onAction="#openDirectory" text="Open project directory..." HBox.hgrow="ALWAYS" />
			</HBox>
		</VBox>
	</content>
</DialogPane>

