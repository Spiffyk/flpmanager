<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ButtonType?>
<?import cz.spiffyk.flpmanager.application.controls.tags.TagsSelector?>

<GridPane hgap="3" vgap="3" xmlns:fx="http://javafx.com/fxml/1">
	<Label text="%song_edit.name" GridPane.vgrow="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="0" />
	<TextField fx:id="name" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="0" />
	
	<Label text="%song_edit.author" GridPane.vgrow="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="1" />
	<TextField fx:id="author" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="1" />
	
	<Label text="%song_edit.filename" GridPane.vgrow="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="2" />
	<TextField fx:id="filename" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="2" />
	
	<TagsSelector fx:id="tags" prefHeight="200" GridPane.rowIndex="3" GridPane.columnSpan="2" />
</GridPane>

